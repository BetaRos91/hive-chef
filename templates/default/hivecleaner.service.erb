[Unit]
Description = Hive cleaner
After = syslog.target network.target remote-fs.target

[Service]
User = <%= node['hops']['hdfs']['user'] %>

PIDFile = <%= node['hive2']['hive_cleaner']['pid_file'] %>
ExecStart = <%= node['hive2']['base_dir'] %>/bin/start-hivecleaner.sh

LimitNOFILE = 20000
Type = forking

[Install]
WantedBy = multi-user.target
